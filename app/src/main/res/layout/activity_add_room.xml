<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddRoomActivity">

    <data>
        <variable
            name="activity"
            type="com.example.yujin.whereismyroom.AddRoomActivity" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/add_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/Base.ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white"/>

        <ImageView
            android:id="@+id/add_img_room"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/add_toolbar"
            tools:src="@drawable/room_sample" />

        <TextView
            android:id="@+id/add_txt_cost_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="@string/addCostInfo"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/add_img_room"
            app:layout_constraintBottom_toTopOf="@+id/add_btn_rent_year"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <!-- style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"-->
        <Button
            android:theme="@style/AppTheme.Button"
            android:id="@+id/add_btn_rent_year"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/addRentYear"
            android:textSize="14sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{activity::onRentTypeButtonClick}"
            app:layout_constraintTop_toBottomOf="@+id/add_txt_cost_info"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/add_btn_rent_month"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/addRentMonth"
            android:textSize="14sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{activity::onRentTypeButtonClick}"
            app:layout_constraintTop_toBottomOf="@+id/add_txt_cost_info"
            app:layout_constraintLeft_toRightOf="@+id/add_btn_rent_year"/>

        <EditText
            android:id="@+id/add_edit_rent_cost"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/add_txt_cost_info"
            app:layout_constraintLeft_toRightOf="@+id/add_btn_rent_month"/>

        <TextView
            android:id="@+id/add_txt_utilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/addUtilities"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/add_btn_rent_year"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <CheckBox
            android:id="@+id/add_check_no_utilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text="@string/noUtilities"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/add_btn_rent_month"
            app:layout_constraintLeft_toRightOf="@+id/add_txt_utilities"/>
        
        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/add_num_utilities"
            android:layout_width="130dp"
            android:layout_height="40dp"
            app:min="0"
            app:max="50"
            app:value="-5"
            app:unit="1"
            app:focusable="false"
            app:layout_constraintTop_toBottomOf="@+id/add_edit_rent_cost"
            app:layout_constraintLeft_toRightOf="@+id/add_check_no_utilities"/>

        <TextView
            android:id="@+id/add_txt_included_utilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="73dp"
            android:text="@string/includedUtilities"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/add_txt_utilities"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/add_btn_internet"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="@string/utilitiesInternet"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/add_num_utilities"
            app:layout_constraintLeft_toRightOf="@+id/add_txt_included_utilities"/>

        <Button
            android:id="@+id/add_btn_tv"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="@string/utilitiesTv"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/add_num_utilities"
            app:layout_constraintLeft_toRightOf="@+id/add_btn_internet"/>

        <Button
            android:id="@+id/add_btn_water"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="@string/utilitiesWater"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/add_num_utilities"
            app:layout_constraintLeft_toRightOf="@+id/add_btn_tv"/>

    </android.support.constraint.ConstraintLayout>

</layout>